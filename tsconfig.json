{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@studio/*": ["apps/simulator-studio/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".mockdb"]
}
